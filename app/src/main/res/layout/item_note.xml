<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/noteItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                    <TextView
                        android:id="@+id/noteItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="24dp"
                        android:paddingBottom="8dp"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:hint="title here"/>
                    <CheckBox
                        android:id="@+id/noteCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:visibility="gone"
                        android:layout_alignBaseline="@+id/noteItemTitle"
                        android:layout_alignBottom="@+id/noteItemTitle"
                        android:layout_alignParentEnd="true"/>
                    <ImageView
                        android:id="@+id/noteItemImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true" />
                    <TextView
                        android:layout_below="@+id/noteItemTitle"
                        android:id="@+id/noteItemSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="24dp"
                        android:textSize="14sp"
                        android:hint="body here"/>
                </RelativeLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
